{
  "manifest_version": 3,
  "name": "LinkedIn Auto Commenter",
  "version": "1.0",
  "description": "Automatically comments on LinkedIn posts containing specific keywords.",
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "scripting",
    "alarms",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}